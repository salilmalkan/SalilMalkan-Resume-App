<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SMAppLayoutTheme"
    android:orientation="vertical"
    android:background="@drawable/bg4" >

    <com.salil.widgets.SMTopbar
        android:id="@+id/smtopbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <com.salil.widgets.SMActionbar
        android:id="@+id/smactionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/contact_imageview"
                android:layout_width="280dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@drawable/view_border"
                android:scaleType="centerInside"
                android:src="@drawable/salil" />

            <Button
                android:id="@+id/contact_call_button"
                style="@style/SMContactButton"
                android:background="@drawable/pink"
                android:text="Call" />

            <Button
                android:id="@+id/contact_email_button"
                style="@style/SMContactButton"
                android:background="@drawable/blue"
                android:text="Email" />

            <Button
                android:id="@+id/contact_hire_button"
                style="@style/SMContactButton"
                android:background="@drawable/orange"
                android:text="Hire Now" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>