<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SMAppLayoutTheme"
    android:orientation="vertical" >

    <Gallery
        android:id="@+id/app_gallery"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/black"
        android:fadingEdge="none"
        android:paddingBottom="10dp" 
        android:paddingTop="10dp"
        android:spacing="4dp" />

    <SlidingDrawer
        android:id="@+id/app_slidingDrawer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:content="@+id/app_drawerContent"
        android:handle="@+id/app_drawerHandle"
        android:topOffset="120dp" >

        <RelativeLayout
            android:id="@+id/app_drawerHandle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/app_slidingdrawer_handle"
                android:gravity="center"
                android:text="i"
                android:textColor="@android:color/black"
                android:textSize="28dp" >
            </Button>
        </RelativeLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/app_drawerContent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/app_slidingdrawer_handle" >

            <include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/app_drawer_content" />
        </LinearLayout>
    </SlidingDrawer>

    <LinearLayout
        android:id="@+id/app_headerContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.salil.widgets.SMTopbar
            android:id="@+id/smtopbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <com.salil.widgets.SMActionbar
            android:id="@+id/smactionbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>